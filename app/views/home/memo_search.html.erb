<h1>メモを検索する</h1>
<%= form_tag("/home/memo_search_result", method: :post) do %>
  <div>
    <select name="value[]"><option value="">メモの種類で検索をする</option>
      <optgroup label="乱読メモ">
        <% search.randoku_memo_type.each do | k, value | %>
          <option value="randoku[<%= k %>]"><%= value %></option>
        <% end %>
      </optgroup>
      <optgroup label="精読メモ">
        <% search.seidoku_memo_type.each do | k, value | %>
          <option value="seidoku[<%= k %>]"><%= value %></option>
        <% end %>
      </optgroup>
    </div>
  <input type="submit" value="絞り込む">
<% end %>

<% if search.selected_memos.present? %>
<h3>検索結果</h3>
<p>result<%= search.selected_memos_count %>件</p>
<div>
  <% search.selected_memos.each do |memo| %>
    <%= search.created_at %><br>
    <%= search.content_type %><br>
    <%= search.content %><br>
    <%= search.book_title %><br>
    <%= search.book_author %><br>
    <%= search.book_reading_progress %><br>
  <% end %>
</div>
<% end %>
