<!-- グローバルスライドメニューバー -->
<div id="global-sidebar" class="global-sidebar sb-right">
  <ul class="global-sidebar__user-info">
    <li>
      <%= link_to '/users/account_setting' do %>
        <div class="global-sidebar__user-image">
          <div class="profile-image" style="background-image: url('/illust/profile_owl.png')"></div>
        </div>
        <%= link_to user.nickname, '/users/account_setting', class: "sm-slide-nickname" %>

      <% end %>
    </li>
  </ul>
  <ul class="global-sidebar__menu">
    <li><%= link_to '本の一覧', '/books/randoku_index' %></li>
    <li><%= link_to '本を登録する', '/books/new' %></li>
    <li><%= link_to '絞り込み検索', '/memo_search' %></li>
    <li><%= link_to '推しの設定', '#' %></li>
    <li><%= link_to 'ヘルプ', '#' %></li>
    <li><%= link_to 'ログアウト', 'auth/logout', method: :get %></li>
  </ul>
</div>
<header id="header-content-js" class="header-wrapper">
  <%= link_to "/books/randoku_index", class: 'yondeco-logo' do %>
    <img src="/yondeco_logo.svg" />
  <% end %>
  <div class="header-menus-wrapper">
    <ul class="header-menus">
      <li class="link">
        <%=
          link_to '本の一覧',
                  '/books/randoku_index',
                  class: "link-text #{'is_active' if current_page?('/books/randoku_index')}"
        %>
      </li>
      <li class="link">
        <%= link_to '本を登録する', '/books/new', class: "link-text #{'is_active' if current_page?('/books/new')}" %>
      </li>
      <li class="link">
        <%=
          link_to '絞り込み検索', '/memo_search', class: "link-text #{'is_active' if current_page?('/memo_search')}"
        %>
      </li>
    </ul>
    <div class="search-icon">
      <div><i class="fa-solid fa-magnifying-glass header-search-icon"></i></div>
      <div class="user-menu__vertical-line"></div>
    </div>
  </div>

  <div class="user-menu-navigation">
    <button class="pc-user-info-btn navi-trigger-btn-js">
      <div class="user-dropdown">
        <img
          src="/illust/profile_owl.png"
          width="33"
          height="auto"
          alt="ユーザーアイコン"
          class="default-user-icon-img"
        />
        <div class="user-name-dropdown"><%= user.nickname %></div>
        <i class="fa-solid fa-sort-down dropdown"></i>
      </div>
    </button>
    <div class="user-navi navi-panel-js">
      <ul class="user-menus">
        <li class="user-menu">
          <%= link_to('アカウントの設定', '/users/account_setting', class: 'button') %>
        </li>
        <li class="user-menu">
          <%= link_to('推しの設定', '#', class: 'button') %>
        </li>
        <li class="user-menu">
          <%= link_to('ヘルプ', '#', class: 'button') %>
        </li>
        <li class="user-menu">
          <%=
            link_to(
              'ログアウト',
              '/auth/logout',
              method: :get,
              class: "button #{'is_active' if current_page?('/auth/logout')}",
            )
          %>
        </li>
      </ul>
    </div>
  </div>
  <div class="open-slide-menu-js">
    <div class="sb-toggle-right">
      <i class="fa-solid fa-bars header-bars"></i>
    </div>
  </div>
</header>
