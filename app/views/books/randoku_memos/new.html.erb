<div>
  <%= book.title %>
</div>
<div>
  <%= book.randoku_memo_time_now %>
</div>

<%= form_tag("/books/#{book.id}/randoku_memos/create", method: :post) do %>
  <div>
    <select name="selectbox_value[]"><option value="">メモの内容を選択する</option>
      <optgroup label="質問">
        <% book.randoku_memo_q.each do | k, value | %>
          <% if book.randoku_memo_selected_content_type == k %>
            <option value="<%= k %>" selected><%= value %></option>
          <% else %>
            <option value="<%= k %>"><%= value %></option>
          <% end %>
        <% end %>
      </optgroup>
      <optgroup label="背景">
        <% book.randoku_memo_bkg.each do | k, value | %>
          <% if book.randoku_memo_selected_content_type == k %>
            <option value="<%= k %>" selected><%= value %></option>
          <% else %>
            <option value="<%= k %>"><%= value %></option>
          <% end %>
        <% end %>
      </optgroup>
    </select>
  </div>
  <textarea name="randoku_memo_content"><%= book.randoku_memo_content %></textarea>
  <input type="submit" value="保存">
<% end %>
