<%= render partial: 'layouts/header' %>
<div class="main-content-js">
  <div class="inner book-index">
    <!-- randoku_indexの共通ヘッダー -->
    <%= render partial: 'books/index_tabs/randoku_index_common', locals: { books: randoku_books } %>

    <!-- indexの共通タブ -->
    <div class="tab tabbled-book-index">
      <div class="tab__underline">
        <ul class="tab__menu tabbed-index-work-area">
          <li class="tab__menu-item index-page" data-tab="1"><p class="tab-width">乱読中の本</p></li>
          <li class="tab__menu-item index-page is-active" data-tab="2"><p class="tab-width">精読中の本</p></li>
        </ul>
        <div id="underline" class="index-page"></div>
        <!-- 追加 -->
      </div>

      <!-- PC版のランキングボタン -->
      <div class="PC-index-ranking-btn">
        <!---タブを切り替えた時に変わる---->
        <div class="index_tab__panel-btn-js tab__panel-btn001" data-btn="1">
          <div class="index-book-ranking">
            <p>Total <%= randoku_books.all_randoku_state_count %>冊</p>
            <%#= raw File.read(Rails.root.join('public', 'sort.svg')) %>
            <div class="ranking-sort-btn">
              <%
                svg_ranking_sort =
                  File
                    .read(Rails.root.join('public', 'sort.svg'))
                    .gsub('<svg ', '<svg class="ranking-sort navi-trigger-btn-js"')
              %>
              <%= raw svg_ranking_sort %>
              <div class="ranking-sort-navi navi-panel-js">
                <ul class="ranking-menus">
                  <li class="ranking-menu randoku_rank_01">
                    <%= link_to('乱読画像の多い順', '/books/randoku_index', class: 'button') %>
                  </li>
                  <li class="ranking-menu randoku_rank_02">
                    <%= link_to('乱読本の投稿順', '/books/randoku_rank_created_books', class: 'button') %>
                  </li>
                  <li class="ranking-menu randoku_rank_03">
                    <%= link_to('乱読画像の投稿順', '/books/randoku_rank_created_randoku_imgs', class: 'button') %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!---タブを切り替えた時に変わる---->
        <div class="index_tab__panel-btn-js tab__panel-btn002 is-show" data-btn="2">
          <div class="index-book-ranking">
            <p>Total <%= seidoku_books.all_seidoku_state_count %>冊</p>
            <%#= raw File.read(Rails.root.join('public', 'sort.svg')) %>
            <div class="ranking-sort-btn">
              <%
                svg_ranking_sort =
                  File
                    .read(Rails.root.join('public', 'sort.svg'))
                    .gsub('<svg ', '<svg class="ranking-sort navi-trigger-btn-js"')
              %>
              <%= raw svg_ranking_sort %>
              <div class="ranking-sort-navi navi-panel-js">
                <ul class="ranking-menus">
                  <li class="ranking-menu">
                    <%= link_to('精読メモの多い順', '/books/seidoku_index', class: 'button') %>
                  </li>
                  <li class="ranking-menu">
                    <%= link_to('精読本の投稿順', '/books/seidoku_rank_created_books', class: 'button') %>
                  </li>
                  <li class="ranking-menu">
                    <%= link_to('乱読メモの多い順', '/books/seidoku_rank_most_randoku_imgs', class: 'button') %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- SP版のランキングボタン -->
      <div class="SP-index-ranking-btn">
        <!---タブを切り替えた時に変わる---->
