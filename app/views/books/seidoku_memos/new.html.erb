<div>
  <%= book.title %>
</div>
<div>
  <%= book.seidoku_memo_time_now %>
</div>
<% book.seidoku_memo_errors[:content].each do |message| %><%= message %><% end %>
<%= form_tag("/books/#{book.id}/seidoku_memos/create", method: :post) do %>
  <div>
    <select name="selectbox_value[]"><option value="0">メモの内容を選択する</option>
      <% book.seidoku_memo_type.each_with_index do |(k, value), i| %>
        <% if book.seidoku_memo_selected_content_type == k %>
          <option value="<%= k %>" selected><%= value %></option>
        <% else %>
          <option value="<%= i+1 %>"><%= value %></option>
        <% end %>
      <% end %>
    </select>
  </div>
  <textarea name="seidoku_memo_content"><%= book.seidoku_memo_content %></textarea>
  <input type="submit" value="保存">
<% end %>
